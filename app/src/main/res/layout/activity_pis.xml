<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facts_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="lab.acme.noviembre15.PisActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/gray">

          <!-- Header: Day, Date -->



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Day, Date -->
            <TextView
                android:text="PIS"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/detail_title_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/sunshine_dark_blue"
                android:textSize="30sp"
                android:paddingLeft="40dp"
                 />

            <TextView
                android:text="Agenda del evento"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/detail_date_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/sunshine_blue"

                android:paddingLeft="40dp"
                android:textAppearance="?android:textAppearanceLarge" />

            <!--
            android:textAppearance="?android:textAppearanceLarge"
                  android:textSize="16sp"
            -->

            <!-- Main content: high, low, art, weather state -->
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/sunshine_light_blue">

                    <TextView
                        android:id="@+id/pis_day"
                        android:text=" 125 "
                        android:fontFamily="sans-serif-light"

                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:text="Dias"

                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/sunshine_dark_blue">

                    <TextView
                        android:text=" 12 "
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/pis_hour"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:text="Horas"

                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/sunshine_blue">

                    <TextView
                        android:text=" 45 "
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/pis_minute"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:text="Minutos"

                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/sunshine_light_blue">

                    <TextView
                        android:text=" 23 "
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/pis_second"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:text="Segundos"
                        android:id="@+id/detail_ID_textview"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <!-- Humidity, wind, pressure -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="... de estar en este convento."
                    android:id="@+id/detail_long_textview"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/sunshine_light_blue" />

                <TextView
                    tools:text="John Doe"
                    android:id="@+id/detail_value_textview"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey_700"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <TextView
                    tools:text="John Doe"
                    android:id="@+id/detail_lat_textview"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:inputType="datetime"
                    android:textAppearance="?android:textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detail_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_camera" />

                <TextView
                    tools:text="x"
                    android:id="@+id/pis_fin_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/grey_700" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>